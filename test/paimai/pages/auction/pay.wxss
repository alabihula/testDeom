/* pages/pay/pay.wxss */
.payBox{
  transform: translateY(100%);
  background: white;
  position: fixed;
  z-index: 100;
  opacity: 0;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
}
.payBox .titleBox{
  position: relative;
  height: 470rpx;
}
.payBox .bigBox{
   position: absolute;
  top: 0px;
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}
.payBox .bigBg{
  position: absolute;
  top: 0px;
  width: 100%;
  height: 300rpx;
  background: rgba(0, 0, 0, 0.5)
}
.payBox .bigPic{
  position: absolute;
  width: 610rpx;
  height: 610rpx;
  top:-305rpx;
  left: 70rpx;
  border: 1px solid #e4e4e4;
}
.payBox .smallPic{
  position: absolute;
  width: 220rpx;
  height: 220rpx;
  top: 220rpx;
  left: 50rpx;
  border: 1px solid #e4e4e4;
}
.payBox .area{
   position: absolute;
    width: 480rpx;
    height: 150rpx;
    font-size: 30rpx;
    top: 310rpx;
    left: 290rpx;
}
.payBox .area text{
  display: block;
}
.payBox .pl{
  padding-left: 20rpx;
}
.payBox .priceBox{
    position: absolute;
    width: 100%;
    height: 300rpx;
    top: 480rpx;
    left: 0rpx;
}
.payBox .slideBox{
  width: 100%;
}
.payBox .slide{
  padding: 0px;
  width: 480rpx;
}
.payBox .slideBox text{
  font-size: 30rpx;
}
.payBox .priceDes{
  font-size: 30rpx;
  padding-left: 100rpx;
}
.payBox .nowPrice{
  width: 100%;
  display: inline-block;
  font-size: 60rpx;
  text-align: center;
  margin-bottom: 40rpx;
}
.payBox .nowPrice .proStr{
  padding-right: 12rpx;
  border-bottom: 3rpx solid #999999;
}
.payBox .pro{
  position: absolute;
  width: 100%;
  top: 800rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 50rpx;
}
.payBox .checkbox{
  color: blue;
}
.payBox .checkbox checkbox{
  transform:scale(0.6) translateX(40%);
}
.payBox button{
  width: 90%;
  height: 80rpx;
  margin-top: 80rpx;
  font-size: 35rpx;
  font-weight: normal;
  line-height: 80rpx;
}